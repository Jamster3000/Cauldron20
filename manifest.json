{
    "manifest_version": 2,
    "name": "Cauldron20",
    "version": "1.0.0",
    "description": "Chrome Extention to incorporate dndbeyond character into the cauldron VTT.",
    "permissions": [
        "activeTab",
        "storage",
        "https://www.dndbeyond.com/character/*",
        "https://character-service.dndbeyond.com/character/v3/*",
        "https://www.cauldron-vtt.net/adventure/*",
        "https://www.cauldron-vtt.net/character/new"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [ "https://www.cauldron-vtt.net/character/new" ],
            "js": [ "cauldronNewCharacter.js" ],
            "css":  ["newCharacterCSS.css"]
        }
    ]
}
